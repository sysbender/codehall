{
  "name": "codenotes",
  "version": "1.0.0",
  "description": "code playground",
  "type": "module",
  "main": "./src/script/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prebuild": "rimraf docs",
    "build": "cross-env webpack --mode=development",
    "build0": " webpack --mode=development",
    "dev": "webpack serve --open --config webpack.config.js",
    "watch": "webpack --watch  --progress --mode  none",
    "monitor": "npx watch 'npm run build'   ",
    "predeploy": "rimraf docs; webpack --mode=development",
    "deploy": "gh-pages -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysbender/codenotes.git"
  },
  "keywords": [
    "code",
    "playground",
    "livecodes"
  ],
  "author": "Jason",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sysbender/codenotes/issues"
  },
  "homepage": "https://github.com/sysbender/codenotes#readme",
  "dependencies": {
    "livecodes": "^0.3.0",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^12.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.9.0",
    "gh-pages": "^6.1.1",
    "glob": "^10.3.10",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.6.0",
    "path": "^0.12.7",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "watch": "^1.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
